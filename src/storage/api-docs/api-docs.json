                    },
                    "payment_method": {
                        "title": "Payment method",
                        "description": "Payment method name",
                        "type": "string",
                        "example": "PayPal"
                    },
                    "status": {
                        "title": "Status",
                        "description": "Trade status",
                        "type": "string",
